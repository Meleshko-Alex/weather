<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/initialSetupFragment"
        android:name="com.example.weather.ui.initial_setup.InitialSetupFragment"
        android:label="InitialSetupFragment">
        <action
            android:id="@+id/action_initialSetupFragment_to_weatherFragment"
            app:destination="@id/weatherFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.weather.ui.registration.RegistrationFragment"
        android:label="RegistrationFragment">
        <action
            android:id="@+id/action_registrationFragment_to_initialSetupFragment"
            app:destination="@id/initialSetupFragment" />
    </fragment>
    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.weather.ui.weather_home.HourlyWeatherFragment"
        android:label="">
        <action
            android:id="@+id/action_weatherFragment_to_dailyWeatherFragment"
            app:destination="@id/dailyWeatherFragment" />
        <action
            android:id="@+id/action_weatherFragment_to_citiesListFragment"
            app:destination="@id/citiesListFragment" />
    </fragment>
    <fragment
        android:id="@+id/dailyWeatherFragment"
        android:name="com.example.weather.ui.weather_daily.DailyWeatherFragment"
        android:label="DailyWeatherFragment" />
    <fragment
        android:id="@+id/citiesListFragment"
        android:name="com.example.weather.ui.cities_list.CitiesListFragment"
        android:label="" />
</navigation>